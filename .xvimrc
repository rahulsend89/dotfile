set alwaysuseinputsource
set relativenumber
set number
set clipboard=unnamed
set hlsearch
set ignorecase
set smartcase
nmap <S-J> 5j
nmap <S-K> 5k
map <S-H> ^
map <S-L> $

vmap <leader>[ <gv
vmap <leader>] >gv
nmap <leader>[ <<
nmap <leader>] >>

map ,m  :xcmenucmd moveFocusToNextArea<CR>
map ,tl :xccmd toggleNavigatorsVisibility<CR>
map ,tb :xccmd toggleDebuggerVisibility<CR>
map ,tr :xccmd toggleUtilitiesVisibility<CR>
map ,tt :xccmd toggleToolbarShown<CR>
nmap gf :xccmd jumpToDefinition<CR>
vnoremap gc  :xccmd commentAndUncommentCurrentLines<CR>
noremap gc :xccmd commentAndUncommentCurrentLines<CR>
vnoremap < <gv
vnoremap > >gv
noremap ,xc :nohls<CR>
nmap ,b :xccmd toggleBreakpointAtCurrentLine<CR>
nnoremap ,o :xccmd openQuickly<CR>
nmap ,n :nissue<CR>
nmap ,p :pissue<CR>
nmap ,f :xccmd showInFinder<CR>
nmap ,c :xcmenucmd Clean<CR>
set tabstop=4
set softtabstop=4
set shiftwidth=4
set sta
set expandtab
set ai
set si
set cin
set history=700
set ul=700
set showcmd
set sol
